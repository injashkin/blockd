include ../link/link
include ../sendMessage/sendMessage

mixin footer(options = {})
  - const {phone1, phone2, company_address, email, logo_title} = options
    //-const data = require('../../data/data.json')    

  footer.footer 
    .footer__content.content
      #contacts.footer__contacts
        +link({prefix: 'footer__phone', type: 'tel', href: phone1, title: 'Позвонить', icon: 'phone_black_24dp'})
        +link({prefix: 'footer__phone', type: 'tel', href: phone2, title: 'Позвонить', icon: 'phone_black_24dp'})
      .footer__location 
        .footer__address=company_address
        +link({prefix: 'footer__email', type: 'mailto', href: email, title: 'Написать письмо', icon: 'email_black_24dp'})
        +sendMessage()
      .footer__copyright-wrap
        .footer__copyright=`${logo_title} © 2020`
        .footer__developer 
          a(href='http://jinv.ru' target='_blank')='Разработка сайта jinv.ru'          
